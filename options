
# Options {{{1

# set-option -g c0-change-interval 100
# set-option -g c0-change-trigger 0 
# set-option -g mouse-resize-pane on
# set-option -g mouse-select-pane on

set-option -g alternate-screen on
set-option -g base-index 1
set-option -g buffer-limit 30
set-option -g default-command "${SHELL}"
set-option -g default-shell "$SHELL"
set-option -g default-terminal "screen-256color"
set-option -g display-time 4000
set-option -g history-limit 100000
# set-option -g destroy-unattached on
# set-option -g detach-on-destroy off
set-option -g lock-command "vlock" 
set-option -g main-pane-height 33
set-option -g message-attr "bold"
set-option -g message-bg "colour221"
set-option -g message-fg "colour16"
set-option -g message-style "fg=#0000FF,bg=#000000"

# set-option -g mode-mouse off
# set-option -g mouse-select-window on

set-option -g mouse-utf8 on
set-option -g other-pane-height 8
set-option -g other-pane-width 86
set-option -g pane-active-border-fg "colour39"
set-option -g pane-border-fg "colour245"
set-option -g renumber-windows on
set-option -g set-titles on
set-option -g set-titles-string "#T"
set-option -g status-bg "colour234"
set-option -g status-fg "white"
set-option -g status-interval 1
set-option -g status-keys "vi"
set-option -g status-left-length 32
set-option -g status-right-length 150
set-option -g status-utf8 on
set-option -g update-environment on
set-option -g utf8 on
set-option -g visual-activity off
set-option -g window-status-activity-attr "bold"
set-option -g window-status-format "#[fg=white,bg=colour234] #I #W "
set-option -g xterm-keys on
set-option -sg escape-time 0
set-option -sg repeat-time 0

set -g pane-active-border-style fg=black
set -g pane-border-style fg=black

set -g status off

# }}}1

